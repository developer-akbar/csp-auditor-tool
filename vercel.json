{
  "version": 2,
  "builds": [
    { "src": "api/[...route].js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/[...route].js" },
    { "src": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|txt|map|woff|woff2|ttf|eot)", "dest": "public/$1.$2" },
    { "src": "/", "dest": "public/index.html" },
    { "src": "/(.*)", "dest": "public/$1" }
  ]
}